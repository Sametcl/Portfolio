@model StellerPortfolio.Models.TblMessage


<div class="form">
    
    
    <h6 class="section-title mb-4">İletişime Geçin</h6>
    <form method="post" action="/Default/SendMessage">
        <div class="form-group">
            <input type="email" name="Email" class="form-control" placeholder="Email Giriniz" required>
        </div>
        <div class="form-group">
            <input type="text" name="NameSurname" class="form-control" placeholder="Ad Soyad Giriniz" required>
        </div>
        <div class="form-group">
            <textarea name="MessageContent"  cols="30" rows="5" class="form-control" placeholder="Mesajınızı buraya yazınız..."></textarea>
        </div>
        <button type="submit" class="btn btn-primary ">Mesajı Gönder</button>
    </form>
</div>